[pull]
  rebase = false
[user]
  name = huzilong
  email = huzilong@meituan.com
[core]
  excludesfile = /Users/birudo/.gitignore_global
  ; pager = delta
[alias]
  root = rev-parse --show-toplevel
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
[delta]
  navigate = true    # use n and N to move between diff sections
  light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
  side-by-side = true
